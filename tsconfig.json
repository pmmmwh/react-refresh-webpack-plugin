{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "outDir": "types",
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2017"
  },
  "include": ["./lib/*"],
  "exclude": ["node_modules"]
}
